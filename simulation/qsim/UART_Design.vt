module Group_16_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clk;
reg rx;
// wires                                               
wire decptn;
wire [3:0] digit;
wire [6:0] segment;

wire sampler;                             

// assign statements (if any)                          
Group_16 i1 (
// port map - connection between master ports and signals/registers   
	.clk(clk),
	.decptn(decptn),
	.digit(digit),
	.rx(rx),
	.segment(segment)
);

// clk
always
begin
	clk = 1'b0;
	clk = #80000 1'b1;
	#80000;
end 

// rx
initial
begin
	rx = 1'b1;
	rx = #7680000 1'b0;
	# 2560000;
	repeat(3)
	begin
		rx = 1'b1;
		rx = #2560000 1'b0;
		# 2560000;
	end
	rx = 1'b1;
end 

