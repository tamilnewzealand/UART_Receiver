	.clk(clk),
	.rx(rx),
	.sampler_tx(sampler)
);

Group_16_vlg_check_tst tb_out(
	.decptn(decptn),
	.digit(digit),
	.segment(segment),
	.sampler_rx(sampler)
);
endmodule

